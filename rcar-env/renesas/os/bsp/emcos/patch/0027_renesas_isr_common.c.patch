+/****************************************************************************
+ISR handler function for GIC problem workaround
+****************************************************************************/
+#include "renesas_isr_common.h"
+
+mcos_er_t rcar_pdev_intm_error_convert(bios_error_t error)
+{
+    mcos_er_t ret;
+
+    switch (error)
+    {
+    case bios_error_OK:
+        ret = MCOS_EOK;
+        break;
+
+    case bios_error_NOT_SUPPORTED:
+        ret = MCOS_ENOSPT;
+        break;
+
+    case bios_error_INVALID_ARGUMENT:
+        ret = MCOS_EPAR;
+        break;
+
+    default:
+        ret = MCOS_ESYS;
+        break;
+    }
+
+    return ret;
+}

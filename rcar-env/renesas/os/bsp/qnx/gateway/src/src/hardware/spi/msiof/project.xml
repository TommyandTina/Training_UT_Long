<?xml version="1.0"?>
<module name="spi-rcar">
  <classification>Driver</classification>
  <description>
    <short>R_Car Gen4 SPI Driver</short>
    <abstract><![CDATA[
		The Serial Protocol Interface on the msiof is protocol compatible
				with the standard Serial Protocol Interface.
				supports Full Duplex communication in Master mode. The SPI provides
                serial communications between the msiof CPU core and peripheral devices.
	        ]]></abstract>
  </description>
  <supports>
    <availability>
      <cpu isa="arm">
        <byteOrder>aarch64.dll.le</byteOrder>
      </cpu>
    </availability>
  </supports>
  <contents>
    <component id="spi-rcar" generated="true">
      <location basedir="aarch64.dll.le">spi-rcar.so</location>
    </component>
  </contents>
  <requires>
    <part build="true" location="lib/spi"/>
    <part build="false" location="hardware/spi"/>
  </requires>
</module>
